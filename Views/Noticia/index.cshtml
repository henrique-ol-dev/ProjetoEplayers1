@model Noticias
    @{
        ViewData["Title"] = "Noticias";
    }

     <div class="titulo_pagina">
    <h1>cadastro de Noticia</h1>
    </div>

   <form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

      <div class="campo">
        <label for="IdNoticia">ID</label>
        <input type="text" name="IdNoticia" id="IdNoticia" />
    </div>

    <div class="campo">            
        <label for="Titulo">Titulo</label>
        <input type="text" name="Titulo" id="Titulo" />
    </div>
    <div class="campo">            
        <label for="Texto">Titulo</label>
        <input type="text" name="Texto" id="Texto" />
    </div>

    <div class="campo">
        <label id="Imagem">Imagem</label>
        <input type="file" name="Imagem" for="Imagem" />
    </div>


    <button class="gradient btn" type="submit">Cadastrar</button>

</form>


<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Titulo</th>
        <th>Texto</th>
        <th>Foto</th>
    </thead>
    <tbody>
        @foreach(Noticias n in ViewBag.Noticias){
            <tr>
                <td>@n.IdNoticia</td>
                <td>@n.Titulo</td>
                <td>@n.Texto</td>
                <td><img src="img/Noticia/@n.Imagem" alt="Imagem da equipe @n.Titulo" ></td>
                <td><a asp-area="" asp-controller="Noticia" asp-action="Excluir" asp-route-id="@n.IdNoticia">
                <i class="fas fa-trash"></i>    
                </a></td>
            </tr>
        }
    </tbody>
</table>